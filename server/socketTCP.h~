#include "sockets.h"

class SocketTCP: public Sockets{
	private:
		int connFD_;
		std::thread thread_;
	public:
		SocketTCP();
		SocketTCP(int domain, int type, int protocol, unsigned short int port);
		int getConnFD();
		int listenSocket();
		int acceptSocket();
		int dataReceive();
		int shutdownSocket();
		void workServer();
		void start();
};

class SocketUDP: public Sockets{
	private:
		std::thread thread_;
	public:
		SocketUDP();
		SocketUDP(int domain, int type, int protocol, unsigned short int port);
		int dataReceive();
		void workServer();
		void start();
};
